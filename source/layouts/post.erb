<% wrap_layout :layout do %>
  <%= partial "post", locals: { post: current_article } %>

  <%= partial "pagination", locals: { older_post: current_article.previous_article, newer_post: current_article.next_article } %>

  <footer class="center">
    <%= link_to "Read more posts in the archive", archive_path, class: "button" %>
  </footer>
<% end %>
